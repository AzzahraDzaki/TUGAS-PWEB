  <script>
    // Mendapatkan elemen file-drop
    const fileDrop = document.querySelector('.file-drop');
    
    // Mendapatkan elemen input file
    const fileInput = fileDrop.querySelector('input[type="file"]');
    
    // Menambahkan event listener pada elemen file-input
    fileInput.addEventListener('change', () => {
      const files = fileInput.files;
      displayFiles(files);
    });
    
    // Fungsi untuk menampilkan daftar file yang dipilih
    function displayFiles(files) {
      const fileLabel = fileDrop.querySelector('.file-label');
    
      if (files.length > 0) {
        fileLabel.textContent = files[0].name;
      } else {
        fileLabel.textContent = 'Click to upload';
      }
    }
    
    
    </script>
    <!-- drag and drop -->
<script>
  function allowDrop(event) {
    event.preventDefault();
  }

  function dragSignature(event) {
    event.dataTransfer.setData("text/plain", event.target.id);
  }

  function dropSignature(event) {
    event.preventDefault();
    const signatureId = event.dataTransfer.getData("text/plain");
    const signatureElement = document.getElementById(signatureId);
    const signatureContainer = event.target;
    signatureContainer.appendChild(signatureElement);
  }
</script>
