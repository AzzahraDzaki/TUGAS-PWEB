<div class="container-settings">
  <div class="left">
    <a href="#">Change Password</a>
    <a href="#">Log Out</a>
  </div>
  <div class="right">
    <form action="">
      <div class="row mb-3">
        <h3  class="col-sm-6">Change Password</h3>
        <div class="col-sm-6">

        </div>
      </div>
      <div class="row mb-3">
        <label for="oldPassword" class="col-sm-3 col-form-label">Enter Your Old Password</label>
        <div class="col-sm-6">
          <input name="password" type="password" class="form-control" id="oldPassword">
        </div>
      </div>
      <div class="row mb-3">
        <label for="newPaswword" class="col-sm-3 col-form-label">Enter Your New Password</label>
        <div class="col-sm-6">
          <input name="newPassword" type="password" class="form-control" id="newPassword">
        </div>
      </div>
      <div class="row mb-3">
        <label for="confirmPaswword" class="col-sm-3 col-form-label">Re-enter Your New Password</label>
        <div class="col-sm-6">
          <input name="confirmPassword" type="password" class="form-control" id="confirmPassword">
        </div>
      </div>
      <div class="row">
        <div class="col-sm-3">
          
        </div>
        <div class="col-sm-6 btn-account">
          <button type="submit" class="btn-save">Save</button>
        </div>
      </div>
    </form>
  </div>
</div>